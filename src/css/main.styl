global-reset()

#app
  position: absolute
  top: 0
  left: 0
  right: 0
  bottom: 0
  overflow: hidden
  background-color: #ccd

.editor
  margin: 0 auto
  padding: 50px 0
  width: 500px
  height: 100%
  box-sizing: border-box

.editor-input
  width: 100%
  height: 100%
  padding: 20px
  font-size: 40px
  box-sizing: border-box
  border: 1px solid #99a
  border-radius: 5px
  overflow: hidden
  box-shadow: 0px 0px 10px 0px rgba(0, 0, 0, 0.3)
  resize: none
